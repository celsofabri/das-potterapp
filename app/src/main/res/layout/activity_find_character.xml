<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.FindCharacterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_character_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etCharacterId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_character_id"
            android:inputType="text"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_search"
            android:textSize="16sp"
            android:padding="16dp"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="24dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Character Details Container -->
        <LinearLayout
            android:id="@+id/llCharacterDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivCharacterImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/character_image"
                android:background="@color/gray"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvCharacterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Harry Potter" />

            <TextView
                android:id="@+id/tvCharacterHouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                tools:text="Gryffindor" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginVertical="16dp" />

            <!-- Details Section -->
            <TextView
                android:id="@+id/tvCharacterActor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Ator: Daniel Radcliffe" />

            <TextView
                android:id="@+id/tvCharacterSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Espécie: Human" />

            <TextView
                android:id="@+id/tvCharacterGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Gênero: Male" />

            <TextView
                android:id="@+id/tvCharacterDateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Data de Nascimento: 31-07-1980" />

            <TextView
                android:id="@+id/tvCharacterAncestry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Ancestralidade: Half-blood" />

            <TextView
                android:id="@+id/tvCharacterEyeColour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Cor dos Olhos: Green" />

            <TextView
                android:id="@+id/tvCharacterHairColour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Cor do Cabelo: Black" />

            <TextView
                android:id="@+id/tvCharacterPatronus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Patrono: Stag" />

            <TextView
                android:id="@+id/tvCharacterWand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Varinha: Holly, 11 inches, Phoenix feather" />

            <TextView
                android:id="@+id/tvCharacterWizard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                tools:text="Bruxo: Sim" />

            <TextView
                android:id="@+id/tvCharacterAlive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"
                tools:text="Vivo: Sim" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            tools:text="Personagem não encontrado" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_back"
            android:textSize="16sp"
            android:padding="16dp"
            android:backgroundTint="@color/gray" />

    </LinearLayout>
</ScrollView>
